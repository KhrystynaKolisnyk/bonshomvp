<% if @alert.errors.any? %>
<h2>The following errors prevented the alert from being created</h2>
<ul>
    <% @alert.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @alert do |f| %>
<p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
</p>
<p>
    <%= f.label :issue %><br/>
    <%= f.text_area :issue %>
</p>
<p>
    <%= f.label :action %><br/>
    <%= f.text_area :action %>
</p>
<p>
    <%= f.label :source %><br/>
    <%= f.text_field :source %>
</p>
<!--p>
    <!--%= f.label :status %>
    <!--%= f.check_box :status, :'data-toggle'=>"toggle" %>
</p-->
<p>
    <%= f.submit %>
</p>
<% end %>

<%= link_to "Back to alerts listing", alerts_path %>