<h1>Listing all alerts</h1>
<p>
    <%= link_to "Create new alert", new_alert_path %>
</p>
<table>
    <tr>
        <th>Title</th>
        <th>Issue</th>
    </tr>
    
    <% @alerts.each do |alert| %>
    <tr>
        <td><%= alert.title %></td>
        <td><%= alert.issue %></td>
        <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
        <td><%= link_to 'Show', alert_path(alert) %></td>
        <td><%= link_to 'Delete', alert_path(alert), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
</table>