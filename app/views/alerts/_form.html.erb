<% if @alert.errors.any? %>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title">
          <%= pluralize(@alert.errors.count, "error") %>
          prohibited this alert from being saved:
        </h2>
        <div class="panel-body">
          <ul>
            <% @alert.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@alert, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of Alert", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :issue %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :issue, class: "form-control", placeholder: "What is the issue" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :action %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :action, class: "form-control", placeholder: "What action needs to be taken" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :source %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :source, class: "form-control", placeholder: "What is the information source" %>
        </div>
      </div>
<!--p>
    <!--%= f.label :status %>
    <!--%= f.check_box :status, :'data-toggle'=>"toggle" %>
</p-->
<p>
        <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
</p>
        <% end %>

        <%= link_to "Back to alerts listing", alerts_path %>
    </div>
</div>